<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AddressBook.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AddressBook.MAUI"
    
    xmlns:pages="clr-namespace:AddressBook.MAUI.Pages"
    
    Shell.FlyoutBehavior="Disabled"
    Title="AddressBook.MAUI">

    <ShellContent Title="Contact List" Route="ContactListPage" ContentTemplate="{DataTemplate pages:ContactListPage}" />
    <ShellContent Title="Edit Contact" Route="ContactEditPage" ContentTemplate="{DataTemplate pages:ContactEditPage}" />
    <ShellContent Title="Contact Details" Route="ContactDetailsPage" ContentTemplate="{DataTemplate pages:ContactDetailsPage}" />
    <ShellContent Title="Add Contact" Route="AddContactPage" ContentTemplate="{DataTemplate pages:AddContactPage}" />


</Shell>
