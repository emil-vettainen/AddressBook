<UserControl x:Class="AddressBook.WPF.Views.AddContactView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddressBook.WPF.Views"
             
             xmlns:viewmodels="clr-namespace:AddressBook.WPF.ViewModels"
             xmlns:models="clr-namespace:AddressBook.Shared.Models;assembly=AddressBook.Shared"
             d:DataContext="{d:DesignInstance Type=viewmodels:AddContactViewModel}"
             
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label Content="AddContactView" />
            <Button Content="Visa lista" Command="{Binding NavigateToContactListCommand}" Margin="0,20"/>
            <Label Content="FirstName" />
            <TextBox Text="{Binding Contact.FirstName}" />
            <Label Content="Email" />
            <TextBox Text="{Binding Contact.Email}" />
            <Button Content="Add" Command="{Binding AddContactCommand}" Margin="0,20"/>
        </StackPanel>
    </Grid>
</UserControl>
