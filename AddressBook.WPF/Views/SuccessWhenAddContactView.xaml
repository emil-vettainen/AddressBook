<UserControl x:Class="AddressBook.WPF.Views.SuccessWhenAddContactView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddressBook.WPF.Views"
             
             xmlns:viewmodels="clr-namespace:AddressBook.WPF.ViewModels"
             xmlns:models="clr-namespace:AddressBook.Shared.Models;assembly=AddressBook.Shared"
             d:DataContext="{d:DesignInstance Type=viewmodels:SuccessWhenAddContactViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label Content="Din kontakt har sparats!" />
            <Button Content="Lägg till ny" Command="{Binding AddContactCommand}" Margin="0,20"/>
            <Button Content="Till Menyn" Command="{Binding NavigateToMainMenuCommand}" Margin="0,20"/>
        </StackPanel>
       
    </Grid>
</UserControl>
